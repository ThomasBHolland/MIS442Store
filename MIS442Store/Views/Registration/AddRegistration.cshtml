@{
    Layout = "~/Views/Shared/MISLayout.cshtml";
}
@using MIS442Store.Models
@using MIS442Store.DataLayer.DataModels
@model RegistrationModel

@using (Html.BeginForm())
{

    <div>
        @Html.HiddenFor(m => m.RegistrationID)      
    </div>
    <h1>Registration Add Page</h1>
    <div>
        <br />
        @Html.LabelFor(m => m.RegistrationDate)
        @Html.TextBoxFor(m => m.RegistrationDate)
        @Html.ValidationMessageFor(m => m.RegistrationDate)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationProductID)
        @Html.TextBoxFor(m => m.RegistrationProductID)
        @Html.ValidationMessageFor(m => m.RegistrationProductID)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationSerialNumber)
        @Html.TextBoxFor(m => m.RegistrationSerialNumber)
        @Html.ValidationMessageFor(m => m.RegistrationSerialNumber)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationVerified)
        @Html.TextBoxFor(m => m.RegistrationVerified)
        @Html.ValidationMessageFor(m => m.RegistrationVerified)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationUserName)
        @Html.TextBoxFor(m => m.RegistrationUserName)
        @Html.ValidationMessageFor(m => m.RegistrationUserName)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationAddress)
        @Html.TextBoxFor(m => m.RegistrationAddress)
        @Html.ValidationMessageFor(m => m.RegistrationAddress)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationState)
        @Html.DropDownListFor(m => m.RegistrationState, new SelectList(Model.States, "code", "name"))
        @Html.ValidationMessageFor(m => m.RegistrationState)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationCity)
        @Html.TextBoxFor(m => m.RegistrationCity)
        @Html.ValidationMessageFor(m => m.RegistrationCity)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationZip)
        @Html.TextBoxFor(m => m.RegistrationZip)
        @Html.ValidationMessageFor(m => m.RegistrationZip)
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.RegistrationPhone)
        @Html.TextBoxFor(m => m.RegistrationPhone)
        @Html.ValidationMessageFor(m => m.RegistrationPhone)
    </div>
    <input type="submit" value="Submit">



}